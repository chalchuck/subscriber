<div class="container" id="login-form" style="margin-top: 8%;">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Create your account</h3>
        </div>
        <div class="panel-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'}) do |f| %>
            <%= f.input :name,
                        label: "Full name",
                        autofocus: true,
                        required: false,
                        input_html: {class: "floatlabel"},
                        placeholder: "Your first and last name" %>

            <%= f.input :email,
                        label: "Email address",
                        placeholder: t('placeholder.email'),
                        input_html: {class: "floatlabel"} %>

            <%= f.input :password, label: "Password", placeholder: "Create your password" %>

            <div class="clearfix">
              <a href="<%= url_for([:new, :user, :session]) %>" class="btn btn-default pull-left"><i class="material-icons">done</i>Login</a>
              <button type="submit" class="btn btn-primary btn-raised pull-right">
                <i class="material-icons">done</i> Register
              </button>
            </div>
          <% end %>
        </div>
        <div class="panel-footer">
        </div>
      </div>
    </div>
  </div>
</div>
