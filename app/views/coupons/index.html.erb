<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-sky" data-widget='{"draggable": "false"}'>
      <div class="panel-heading">
        <h3>COUPONS</h3>
      </div>
      <div class="panel-body">
        <%= page_entries_info @coupons %>

        <%= link_to [:new, @current_business, :coupon], class: "pull-right btn btn-success btn-raised" do %>
          <i class="material-icons">done</i> coupon
        <% end %>
      </div>

      <% if @coupons.any? %>
        <div class="infinite-table">
          <div class="table-responsive">
            <table class="table table-hover">
              <tr>
                <th>COUPON ID</th>
                <th>DISCOUNT</th>
                <th>CURRENCY</th>
                <th>DURATION</th>
                <th>STATUS</th>
                <th>CREATED ON</th>
                <th colspan="2"></th>
              </tr>
              <%= render @coupons %>
            </table>

            <div class="pagination">
              <%= paginate @coupons, theme: 'bootstrap4' %>
            </div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
