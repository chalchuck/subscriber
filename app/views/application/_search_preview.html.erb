<%= form_tag path, method: 'get' do %>
  <div class="col-md-10 zero-padding" style="margin-bottom:5%;">
    <div class="input-group">
      <%= text_field_tag :q, params[:q], placeholder: placeholder, class: 'search-control' %>
      <span class="input-group-btn">
				<button type="submit" class="btn btn-success search_glyf ortasearch-glyf">
					<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
				</button>
			</span>
    </div>
  </div>
<% end %>
