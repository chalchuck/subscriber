
<div class="container" style="margin-top:130px;">
  <div class="row" style="margin-bottom:15%;">
    <div class="col-xs-6">
      <h1>
        <a href="#">
        <!-- <img src="logo.png"> -->
          <%= @current_invoice.try(:business) %>
        </a>
      </h1>
    </div>
    <div class="col-xs-6 text-right">
      <h1>INVOICE</h1>
      <h1><small>Invoice # <%= @current_invoice.try(:receipt_number) %></small></h1>
      <p>Date : <%= invoice_date @current_invoice.try(:due_date) %><br>
      Period : <%= "#{invoice_date(@current_invoice.try(:due_date))} to #{invoice_date(@current_invoice.try(:due_date) + 1.month)}" %></p>
    </div>
  </div>
  <div class="row" style="margin-bottom:8%;">
          <div class="col-xs-5">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>From: <%= @current_invoice.try(:business) %> </h4>
        </div>
        <div class="panel-body">
          <p>
            <!-- Symatech Lab <br> -->
            Somak Building next to Airtel , 6th Floor <br>
            Nairobi , Mombasa Road <br>
            Mobile:+254 713 946 234 / +254 734 043 444 <br>
          </p>
        </div>
      </div>
    </div>
    <div class="col-xs-5 col-xs-offset-2 text-right">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>To : <%= @current_invoice.try(:customer) %> </h4>
        </div>
        <div class="panel-body">
          <p>
            4th Avenue, 16th Floor <br>
            Nairobi, Ngong Road <br>
            Mobile:+254 713 946 234 / +254 734 043 444 <br>
          </p>
        </div>
      </div>
    </div>
  </div>
  <!-- / end client details section -->

  <table class="default-table table-bordered">
    <tr>
      <th><h4>Description</h4></th>
      <th><h4 class="text-right">Qty</h4></th>
      <th><h4 class="text-right">Price</h4></th>
      <th><h4 class="text-right">Sub Total</h4></th>
    </tr>
    <tr>
      <td>Details of project here</td>
      <td class="text-right"> <%= @current_invoice.try(:subscription).try(:quantity) %> </td>
      <td class="text-right"> <%= to_ksh @current_invoice.try(:subscription).try(:plan).try(:amount) %> </td>
      <td class="text-right"> <%= to_ksh @current_invoice.try(:amount_due) %> </td>
    </tr>
  </table>

  <div class="row text-right">
    <div class="col-xs-3 col-xs-offset-6">
      <p>
        <strong>
        Sub Total : <br>
        TAX : <br>
        Total : <br>
        </strong>
      </p>
    </div>
    <div class="col-xs-3">
      <strong>
      <%= to_ksh @current_invoice.try(:amount_due) %> <br>
      N/A <br>
      <%= to_ksh @current_invoice.try(:amount_due) %> <br>
      </strong>
    </div>
  </div>

  <div class="row" style="margin-top:20%;">
    <div class="col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Mpesa Details</h4>
        </div>
        <div class="panel-body">
          <p>PAYBILL: 811661</p>
          <p>AMOUNT : <%= to_ksh @current_invoice.try(:amount_due) %> </p>
          <p>ACCOUNT NUMBER : <%= @current_invoice.try(:receipt_number) %></p>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="span7">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4>Contact Details</h4>
          </div>
          <div class="panel-body">
            <p>Email : charles@coincycle.co <br></p>
            <p>Mobile : +254 710 335 602 <br></p>
            <small>Payments should be made by MPESA</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
